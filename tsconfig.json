{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "Images/*": [
        "src/images/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "globals.d.ts"
  ],
  "files": [
    "webpack.config.js"
  ]
}